<%layout("/layouts/boilerplate")%>
<div class="row  mk">
<div class="col-8 offset-2">

<body>
    <h2>Create Your New Listing</h2>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" required name="listing[title]" placeholder="Enter Ur Title" id="" class="form-control">
            <div class="invalid-feedback">Please Enter a valid Title.</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" required name="listing[description]" placeholder="Enter Ur Description" id="" class="form-control"></textarea>
            <div class="invalid-feedback">Please Enter a valid Description.</div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]"  id="" class="form-control">
            
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="Price" class="form-label">Price</label>
                <input  name="listing[price]" placeholder="Enter Ur Price"  id="" required class="form-control">
                <div class="invalid-feedback">Please Enter a valid Price.</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" required name="listing[country]" placeholder="Enter Ur Country" id="" class="form-control">
                <div class="invalid-feedback">Please Enter a valid Country.</div>
            </div>
            
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" required name="listing[location]" placeholder="Enter Ur Location" id="" class="form-control">
            <div class="invalid-feedback">Please Enter a valid Location.</div>
        </div>
        <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" required class="form-control">
            <option value="resort">Resort</option>
            <option value="restaurant">Restaurant</option>
            <option value="mountains">Mountains</option>
            <option value="river">River</option>
            <option value="beach">Beach</option>
            <option value="lake">Lake</option>
            <option value="desert">Desert</option>
            <option value="island">Island</option>
            <option value="forest">Forest</option>
            <option value="camping">Camping</option>
            <option value="cabin">Cabin</option>
            <option value="castle">Castle</option>
            <option value="villa">Villa</option>
            <option value="apartment">Apartment</option>
            <option value="bungalow">Bungalow</option>
            <option value="farmhouse">Farmhouse</option>
            <option value="treehouse">Treehouse</option>
            <option value="houseboat">Houseboat</option>
            <option value="tent">Tent</option>
            <option value="luxury">Luxury</option>
            <option value="budget">Budget</option>
            <option value="heritage">Heritage</option>
            <option value="city">City</option>
            <option value="countryside">Countryside</option>
            <option value="other">Other</option>
        </select>
            <div class="invalid-feedback">Please Enter a valid category.</div>
        </div>
        <br><br>
        <button class="btn btn-dark ">Add</button>
    </form>
</body>
</div>
</div>

