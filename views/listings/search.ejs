<%layout("/layouts/boilerplate")%>


<body>
    <% if(results.length === 0){ %>
    <p>No results found.</p>
  <% }else{ %>
 

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">

    <% for(let listing of results ){ %>
    <a href="/listings/<%=listing._id%>" class="lk" >
    <div class="card col" >
    <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 24rem">
    <div class="card-img-overlay"></div>
    <div class="card-body"> 
    <p class="card-text"> <%=listing.title%> <br> &#8377; <%=listing.price.toLocaleString("en-IN")%> /night </p>
    </div>
</div>
</a>
<% } %>
</div>
<%}%>
</body>

