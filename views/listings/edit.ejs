<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">

    
<body>
    <h2>Edit Your New Listing</h2>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3  mt-5">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" required value="<%=listing.title%>" class="form-control" id="">
            <div class="invalid-feedback">Please Enter a valid Title.</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" required  class="form-control" id=""><%=listing.description%></textarea>
            <div class="invalid-feedback">Please Enter a valid Description.</div>
        </div>
        <div class="mb-3">
            <img src="<%=originalimg%>" alt="">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]"  id="" class="form-control">
            
        </div>
        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  name="listing[price]" required class="form-control" value="<%=listing.price%>"  id="">
                <div class="invalid-feedback">Please Enter a valid Price.</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" required class="form-control" value="<%=listing.country%>" id="">
                <div class="invalid-feedback">Please Enter a valid Country.</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" required class="form-control" value="<%=listing.location%>" id="">
            <div class="invalid-feedback">Please Enter a valid Location.</div>
        </div>
        
        <button class="btn btn-dark edit mt-4 mb-5">Edit</button>
    </form>
</body>
</div>
</div>
