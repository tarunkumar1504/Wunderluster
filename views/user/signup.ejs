<%layout("/layouts/boilerplate")%>
<div class="row  mk">
    <h1 class="col-6 offset-3">Sign Up On Wnderlust</h1>
<div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" required name="username" placeholder="Enter Ur Username" id="" class="form-control">
            <div class="invalid-feedback">Please Enter Username.</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" required name="email" placeholder="Enter Ur Email" id="" class="form-control">
            
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" required name="password" placeholder="Enter Ur Password" id="" class="form-control">
            
        </div>
        <button class="btn btn-success">Sign Up</button>
    </form>
</div>
</div>
